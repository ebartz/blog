{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "EnvironmentName": {
            "type": "string",
            "metadata": {
                "description": "Prefix of the environment"
            }
        },
        "AdminUsername": {
            "type": "string",
            "defaultValue": "labadmin",
            "metadata": {
                "description": "User name for the Linux Virtual Machines."
            }
        },
        "AdminSshKey": {
            "type": "string",
            "metadata": {
                "description": "RSA key to be configured on all nodes for direct access through ssh."
            }
        }
    },
    "variables": {
        "urlAssets": "https://raw.githubusercontent.com/peterschen/blog/master/templates/container-monitoring-demo",
        "nameAcs": "[concat(parameters('EnvironmentName'), '-acs')]",
        "nameAks": "[concat(parameters('EnvironmentName'), '-aks')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "WorkspaceDeployment",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('urlAssets'), '/loganalytics.json')]"
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "type": "Microsoft.Resources/deployments",
            "name": "ACS",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('urlAssets'), '/acs.json')]"
                },
                "parameters": {
                    "Name": {
                        "value": "[variables('nameAcs')]"
                    },
                    "AdminUsername": {
                        "value": "[parameters('AdminUsername')]"
                    },
                    "AdminSshKey": {
                        "value": "[parameters('AdminSshKey')]"
                    },
                    "MasterCount": {
                        "value": 1
                    },
                    "AgentCount": {
                        "value": 1
                    },
                    "AgentVmSize": {
                        "value": "Standard_DS2_v2"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "type": "Microsoft.Resources/deployments",
            "name": "AKS",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('urlAssets'), '/aks.json')]"
                },
                "parameters": {
                    "Name": {
                        "value": "[variables('nameAks')]"
                    },
                    "AdminUsername": {
                        "value": "[parameters('AdminUsername')]"
                    },
                    "AdminSshKey": {
                        "value": "[parameters('AdminSshKey')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "AcsFqdnMaser": {
            "type": "string",
            "value": "[reference('acs').outputs.FqdnMaster.value]"
        },
        "AcsFqdnAgent": {
            "type": "string",
            "value": "[reference('acs').outputs.FqdnAgent.value]"
        }
    }
}