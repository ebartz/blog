{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "EnvironmentName": {
            "type": "string",
            "metadata": {
                "description": "Prefix of the environment"
            }
        },
        "AdminUsername": {
            "type": "string",
            "defaultValue": "labadmin",
            "metadata": {
                "description": "User name for the Linux Virtual Machines."
            }
        },
        "AdminSshKey": {
            "type": "string",
            "metadata": {
                "description": "RSA key to be configured on all nodes for direct access through ssh."
            }
        }
    },
    "variables": {
        "urlAssets": "https://raw.githubusercontent.com/peterschen/blog/master/templates/container-monitoring-demo",
        "nameAcs": "[concat(parameters('EnvironmentName'), '-acs')]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "type": "Microsoft.Resources/deployments",
            "name": "ACS",
            "properties": {
                "mode": "Incremental",
                "templateLink": "[concat(variables('urlAssets'), '/acs.json')]",
                "parameters": {
                    "Name": "[variables('nameAcs')]",
                    "AdminUsername": "[parameters('AdminUsername')]",
                    "AdminSshKey": "[parameters('AdminSshKey')]",
                    "MasterCount": 1,
                    "AgentCount": 1,
                    "AgentVmSize": "Standard_D2s_v3"
                }
            }
        }
    ],
    "outputs": {
        "AcsFqdnMaser": {
            "type": "string",
            "value": "[reference('acs').FqdnMaster]"
        },
        "AcsFqdnAgent": {
            "type": "string",
            "value": "[reference('acs').FqdnAgent]"
        }
    }
}