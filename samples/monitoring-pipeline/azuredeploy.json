{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ResourceGroupName": {
            "type": "string"
        },
        "ResourceGroupLocation": {
            "type": "string"
        }
    },
    "variables": {
        "gitBranch": "monitoring-pipeline",
        "urlBase": "[concat('https://raw.githubusercontent.com/peterschen/blog/', variables('gitBranch'), '/')]",
        "urlTemplates": "[concat(variables('urlBase'), '/templates')]",
        "urlSamples": "[concat(variables('urlBase'), '/samples/monitoring-pipeline')]",
        "location": "[parameters('ResourceGroupLocation')]",
        "locationLogAnalytics": "[variables('location')]",
        "locationApplicationInsights": "[variables('location')]",
        "nameResourceGroup": "[parameters('ResourceGroupName')]",
        "nameLogAnalytics": "[uniqueString(subscription().id, variables('nameResourceGroup'), deployment().name, 'loganalytics')]",
        "nameApplicationInsights": "[uniqueString(subscription().id, variables('nameResourceGroup'), deployment().name, 'applicationinsights')]",
        "nameDeployment": "[deployment().name]",
        "nameDeploymentLogAnalytics": "[concat(variables('nameDeployment'), '-LogAnalytics')]",
        "nameDeploymentApplicationInsights": "[concat(variables('nameDeployment'), '-ApplicationInsights')]"
    },
    "resources": [
        {
            "apiVersion": "2018-05-01",
            "type": "Microsoft.Resources/resourceGroups",
            "name": "[variables('nameResourceGroup')]",
            "location": "[variables('location')]",
            "properties": {}
        },
        {
            "apiVersion": "2018-05-01",
            "type": "Microsoft.Resources/deployments",
            "name": "[variables('nameDeploymentLogAnalytics')]",
            "resourceGroup": "[variables('nameResourceGroup')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('nameResourceGroup'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('urlTemplates'), '/loganalytics/workspace.json')]"
                },
                "parameters": {
                    "Name": {
                        "value": "[variables('nameLogAnalytics')]"
                    },
                    "Region": {
                        "value": "[variables('locationLogAnalytics')]"
                    },
                    "Tier": {
                        "value": "Standalone"
                    }
                }
            }
        },
        {
            "apiVersion": "2018-05-01",
            "type": "Microsoft.Resources/deployments",
            "name": "[variables('nameDeploymentApplicationInsights')]",
            "resourceGroup": "[variables('nameResourceGroup')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('nameResourceGroup'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('urlTemplates'), '/applicationinsights/app.json')]"
                },
                "parameters": {
                    "Name": {
                        "value": "[variables('nameApplicationInsights')]"
                    },
                    "Region": {
                        "value": "[variables('locationApplicationInsights')]"
                    },
                    "Type": {
                        "value": "web"
                    }
                }
            }
        }
    ],
    "outputs":{
    }
}